{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Debug Nuxt (Edge)",
			"type": "shell",
			"command": "npx nuxi dev --host",
			"args": [],
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "custom",
					"pattern": [
						{
							"regexp": ".*Listening on.*"
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".*Listening on.*",
						"endsPattern": ".*Listening on.*"
					}
				}
			],
			"group": "build"
		}
	]
}